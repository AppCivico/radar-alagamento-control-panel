{
  "name": "radar-alagamento-control-panel",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "admin-lte": "^2.4.2",
    "bootstrap": "^3.3.7",
    "jquery": "^3.2.1",
    "node-sass-chokidar": "0.0.3",
    "npm-run-all": "^4.1.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-scripts": "1.0.14"
  },
  "scripts": {
    "build:css": "node-sass-chokidar --include-path ./src --include-path ./node_modules src/stylesheets/ -o src/",
    "build:js": "NODE_PATH=src react-scripts start",
    "build": "npm run build:css && react-scripts build",
    "cypress:open": "cypress open",
    "cypress:test": "cypress run --reporter spec",
    "cypress:run": "cypress run",
    "eject": "react-scripts eject",
    "fakeapi": "json-server --watch db.json --port 3030",
    "lint:es": "eslint --ext .js src/javascripts/app --output-file test-reports/eslint.xml",
    "lint:sass": "sass-lint -c .sass-lint.yml 'src/stylesheets/**/*.scss' -v -q -i 'src/stylesheets/vendor/**/*.scss' --verbose --no-exit --format junit --output ./test-reports/sass-lint.xml",
    "lint": "npm-run-all --parallel lint:es lint:sass",
    "prebuild": "npm run cypress:run && npm run lint",
    "start": "npm-run-all -p fakeapi watch:css build:js",
    "test": "NODE_PATH=src react-scripts test --env=jsdom",
    "watch:css": "npm run build:css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/stylesheets/ -o src/ --watch --recursive"
  },
  "devDependencies": {
    "bootstrap-sass": "^3.3.7",
    "chai-enzyme": "^1.0.0-beta.0",
    "cypress": "^1.0.2",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "font-awesome": "^4.7.0",
    "json-server": "^0.12.0",
    "mocha-junit-reporter": "^1.15.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "sass-lint": "^1.12.1"
  }
}
